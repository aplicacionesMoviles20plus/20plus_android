<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ScheduleFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/lblCurso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Curso"
            android:textSize="30sp"
            style="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteY="1dp" />
        <TextView
            android:id="@+id/txt_Curso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/lblCurso"
            android:text="Ingles"
            />
        <TextView
            android:id="@+id/lblSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Title"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@id/txt_Curso"
            android:text="Horario"
            />
       <Spinner
           android:id="@+id/spinner_days"
           android:layout_width="wrap_content"
           android:layout_height="40dp"
           app:layout_constraintTop_toBottomOf="@id/lblSchedule"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintBottom_toTopOf="@id/grid_schedule"
           />
        <Button
            android:id="@+id/btn_find"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:layout_constraintLeft_toRightOf="@id/spinner_days"
            app:layout_constraintTop_toBottomOf="@id/lblSchedule"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/grid_schedule"
            />
        <GridLayout
            android:id="@+id/grid_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/spinner_days"
            app:layout_constraintBottom_toBottomOf="parent"
            android:rowCount="11"
            android:columnCount="2"
            >
            <TextView
                android:id="@+id/txt1"
                android:layout_column="0"
                android:layout_row="0"
                style="@style/AppTheme.Horas.Azul"
                android:text="8:00 am"
                />
            <TextView
                android:id="@+id/txt2"
                android:layout_column="0"
                android:layout_row="1"
                style="@style/AppTheme.Horas.Azul"
                android:text="9:00 am"
                />
            <TextView
                android:id="@+id/txt3"
                android:layout_column="0"
                android:layout_row="2"
                style="@style/AppTheme.Horas.Azul"
                android:text="10:00 am"
                />
            <TextView
                android:id="@+id/txt4"
                android:layout_column="0"
                android:layout_row="3"
                style="@style/AppTheme.Horas.Azul"
                android:text="11:00 am"
                />
            <TextView
                android:id="@+id/txt5"
                android:layout_column="0"
                android:layout_row="4"
                style="@style/AppTheme.Horas.Azul"
                android:text="12:00 pm"
                />
            <TextView
                android:id="@+id/txt6"
                android:layout_column="0"
                android:layout_row="5"
                style="@style/AppTheme.Horas.Azul"
                android:text="1:00 pm"
                />
            <TextView
                android:id="@+id/txt7"
                android:layout_column="0"
                android:layout_row="6"
                style="@style/AppTheme.Horas.Azul"
                android:text="2:00 pm"
                />
            <TextView
                android:id="@+id/txt8"
                android:layout_column="0"
                android:layout_row="7"
                style="@style/AppTheme.Horas.Azul"
                android:text="3:00 pm"
                />
            <TextView
                android:id="@+id/txt9"
                android:layout_column="0"
                android:layout_row="8"
                style="@style/AppTheme.Horas.Azul"
                android:text="4:00 pm"
                />
            <TextView
                android:id="@+id/txt10"
                android:layout_column="0"
                android:layout_row="9"
                style="@style/AppTheme.Horas.Azul"
                android:text="5:00 pm"
                />
            <TextView
                android:id="@+id/txt11"
                android:layout_column="0"
                android:layout_row="10"
                style="@style/AppTheme.Horas.Azul"
                android:text="6:00 pm"
                />
            <TextView
                android:id="@+id/schedule1"
                android:layout_column="1"
                android:layout_row="0"
                style="@style/AppTheme.Horas.Blanco"
                android:text="8:00 am"
                />
            <TextView
                android:id="@+id/schedule2"
                android:layout_column="1"
                android:layout_row="1"
                android:text="9:00 am"
                />
            <TextView
                android:id="@+id/schedule3"
                android:layout_column="1"
                android:layout_row="2"
                android:text="10:00 am"
                />
            <TextView
                android:id="@+id/schedule4"
                android:layout_column="1"
                android:layout_row="3"
                android:text="11:00 am"
                />
            <TextView
                android:id="@+id/schedule5"
                android:layout_column="1"
                android:layout_row="4"
                android:text="12:00 pm"
                />
            <TextView
                android:id="@+id/schedule6"
                android:layout_column="1"
                android:layout_row="5"
                android:text="1:00 pm"
                />
            <TextView
                android:id="@+id/schedule7"
                android:layout_column="1"
                android:layout_row="6"
                android:text="2:00 pm"
                />
            <TextView
                android:id="@+id/schedule8"
                android:layout_column="1"
                android:layout_row="7"
                android:text="3:00 pm"
                />
            <TextView
                android:id="@+id/schedule9"
                android:layout_column="1"
                android:layout_row="8"
                android:text="4:00 pm"
                />
            <TextView
                android:id="@+id/schedule10"
                android:layout_column="1"
                android:layout_row="9"
                android:text="5:00 pm"
                />
            <TextView
                android:id="@+id/schedule11"
                android:layout_column="1"
                android:layout_row="10"
                android:text="6:00 pm"
                />
        </GridLayout>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>
</ScrollView>